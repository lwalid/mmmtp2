<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nounou.tp2" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.nounou.tp2.MainActivity"
            android:label="Ajouter un client" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.nounou.tp2.Main2Activity"
            android:label="Modifier/Supprimer Client" >
        </activity>
        <activity
            android:name="com.example.nounou.tp2.Main3Activity"
            android:label="Liste de clients" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider android:name="com.example.nounou.tp2.MyContentProvider"
            android:authorities="com.example.nounou.tp1.myContentProvider"/>

    </application>

</manifest>
